[Unit]
Description=LOOV Telegram Bot
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
WorkingDirectory=/opt/loov
Environment=PYTHONUNBUFFERED=1
ExecStart=/opt/loov/.venv/bin/python -m app.main
Restart=always
RestartSec=5
User=<USERNAME>
Group=<USERNAME>

NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=full
ProtectHome=true

[Install]
WantedBy=multi-user.target
